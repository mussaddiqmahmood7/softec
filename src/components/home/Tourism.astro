---
import { Image } from "astro:assets"
import { tourism }  from "../../assets/constants/Tourism";
---
<div class="flex flex-col gap-10 justify-center items-center w-full">
<h2 class="text-4xl font-bold text-brandColor text-center">Tourism Permotion</h2>
<div class="grid grid-cols-4 gap-5 ">
{tourism.map((data, key)=>{ return (
    <a href={data.Link} class="flex hover:animate-pulse flex-col gap-3 rounded-xl p-4 bg-white border h-full w-full">
      <div class="bg-gray-300 rounded-xl h-full max-h-[60%] min-h-[60%] w-full overflow-hidden"><Image src={data.image} alt={data.category}/></div>
      <h3 class="text-xl text-brandColor">{data.category}</h3>
      <h3 class=" text-brandColor">{data.description}</h3>
    </a>) })}

</div>
</div>