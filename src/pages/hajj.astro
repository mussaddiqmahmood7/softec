---
import { Image } from "astro:assets";
import MainLayout from "../layout/MainLayout.astro";
import Makha from "../assets/home/whereToGo/hajj.jpg"
import FAQs from "../components/comman/FAQs.astro";
import {FAQS} from "../assets/constants/faq"
import Inovative from "../components/home/inovatives"
---
<MainLayout title="Hajj">
<div class="flex flex-col gap-10 md:gap-12 justify-center items-center">
<p class="text-brandColor text-4xl text-center font-bold">Hajj Umrah</p>
<div class="w-full max-h-80 h-full overflow-hidden rounded-xl">
<Image src={Makha} alt="Hajj" class="rounded-xl h-full mx-auto object-cover object-bottom "/>
</div>

</div>
<Inovative client:load/>
<FAQs client:load FAQS={FAQS}/>
</MainLayout>